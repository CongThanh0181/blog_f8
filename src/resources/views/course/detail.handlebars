<h1>Detail Course</h1>

<div class="row">
    {{#each course}}
    <div class="col-sm-6 col-lg-4">
        <div class="card">
            <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">{{this.description}}</p>
                <a href="/courses/{{this._id}}" class="btn btn-primary">Go To Details</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>